{
    "rules": {
        "objects": {
            ".read": true,
            ".indexOn": "uid",
            "$object_id": {
                ".write": "auth != null && ((!data.exists() || (data.child('uid').val() == auth.uid) && (!newData.child('uid').exists() || newData.child('uid').val() == auth.uid)))"
            }
        },
        "users-activity": {
            "$uid": {
                ".read": "$uid === auth.uid",
                ".write": false
            }
        },
        "users-bookmarks": {
            "$uid": {
                ".read": "$uid === auth.uid",
                ".write": "$uid === auth.uid"
            }
        },
        "users-public": {
            "$uid": {
                ".read": true,
                ".write": "$uid === auth.uid"
            }
        },
        "users-wallets": {
            "$uid": {
                ".read": "$uid === auth.uid",
                ".write": false
            }
        }
    }
}
